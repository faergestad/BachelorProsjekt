<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundhsn"
    tools:context="no.usn.a151710.bachelorprosjekt.HovedSkjerm">


    <ImageView
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logohsn"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/ansattbtn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ansatt"/>


        <ImageView
            android:id="@+id/timeregbtn"
            android:paddingTop="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/timereg"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:text="Ansatte"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:text="Timeregistrering"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/kundebtn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/kunde"/>


        <ImageView
            android:id="@+id/oppdragbtn"
            android:layout_width="180dp"
            android:paddingLeft="5dp"
            android:layout_height="180dp"
            android:src="@drawable/oppdrag"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:textColor="#FFFFFF"
            android:paddingLeft="10dp"
            android:text="Kunder"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:textColor="#FFFFFF"
            android:text="Oppdrag"
            android:textAlignment="center"
            android:textSize="18sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logout"
            android:alpha="0.6"
            android:onClick="logout"/>

    </RelativeLayout>

</LinearLayout>


