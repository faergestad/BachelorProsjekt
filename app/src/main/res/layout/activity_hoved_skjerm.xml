            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/timereg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Timeregistrering"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layou
